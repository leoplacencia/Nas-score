<%= form_for @reg do |r| %>
<div class="col-md-12 text-center">
    <h1>Registro NAS (Nursing Activities Score)</h1>
</div>
<div class="separador"></div>
    <div class="col-md-12">
        <div class="form-group row">
            <div class="col-md-3">
                <label id="registro_rut">Rut</label>
                <input id="registro_rut" name="registro[rut]" type="text" class="form-control" placeholder="Rut" value="<%= @reg.rut %>">
            </div>
            <div class="col-md-3">
                <label id="registro_fecha">Fecha</label>
                <input id="registro_fecha" name="registro[fecha]" type="date" class="form-control" placeholder="Fecha" value="<%= @reg.fecha %>">
            </div>
        
            <div class="col-md-3">
                <label id="registro_puntaje">Puntaje</label>
                <input id="registro_puntaje" name="registro[puntaje]" type="number" step="0.01" class="form-control" placeholder="Puntaje" value="<%= @reg.puntaje %>">
            </div>
        
            <div class="col-md-3">
                <label>Turno</label>
                <select id="registro_turno" name="registro[turno]" class="custom-select">
                    <option value="Largo" <% if  @reg.turno == 'Largo' %>selected<%end%>>Largo</option>
                    <option value="Noche" <% if  @reg.turno == 'Noche' %>selected<%end%>>Noche</option>

                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
        </div>
    </div>
    <% end %>