<!DOCTYPE html>
<html>
  <head>
    <title>NasControl</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
    <a class="navbar-brand" href="/">NAS</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item <%if current_page?(new_registro_path)%>active<%end%>"  >
          <a class="nav-link" href="<%= new_registro_path %>">Registrar NAS </a>
        </li>
        <li class="nav-item <%if current_page?(registros_path)%>active<%end%>">
          <a class="nav-link" href="<%= registros_path %>">Ver Registros</a>
        </li>
        <li class="nav-item <%if current_page?(nascores_path)%>active<%end%>">
          <a class="nav-link" href="<%= nascores_path %>">Administrar NAS</a>
        </li>
        <li class="nav-item <%if current_page?(admin_url)%>active<%end%>">
          <a class="nav-link" href="<%= admin_url %>">Administrar Registros</a>
        </li>
      </ul>
    </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
