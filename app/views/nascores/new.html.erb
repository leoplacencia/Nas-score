<%= form_for @nas do |n| %>
  <div class="form-group row">
    <div class="col-md-6">
        <label id="nascore_description">Descripción</label>
        <input id="nascore_description" name="nascore[description]" type="text" class="form-control" placeholder="Descripción">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
        <label id="nascore_score">Valor</label>
        <input id="nascore_score" name="nascore[score]" type="number" step="0.01" class="form-control" placeholder="Valor">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
        <label>Vincular</label>
        <select id="nascore_cod" name="nascore[cod]" class="custom-select">
            <option value="<%= @max %>" selected>No vinculado</option>
            <% @nascores.each do |nas| %>
                <option value=<%= nas.cod %>><%= nas.cod%></option>
            <% end %>
        </select>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <button type="submit" class="btn btn-primary">Agregar</button>
    </div>
  </div>
<% end %>